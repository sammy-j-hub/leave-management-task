{
    "$schema": "http://adaptivecards.io/schemas/adaptive-card.json",
    "type": "AdaptiveCard",
    "version": "1.2",
    "body": [
        {
            "type": "TextBlock",
            "size": "Medium",
            "weight": "Bolder",
            "text": "Application for Leave",
            "horizontalAlignment": "Center"
        },
        {
            "type": "Input.Text",
            "placeholder": "Name",
            "style": "text",
            "maxLength": 0,
            "id": "SimpleVal"
        },
        {
            "type": "Input.Text",
            "style": "text",
            "maxLength": 0,
            "id": "Val",
            "placeholder": "Department"
        },
        {
            "type": "Input.Text",
            "style": "text",
            "isMultiline": true,
            "id": "MultiLineVal",
            "placeholder": "Reason"
        },
        {
            "type": "TextBlock",
            "text": "Start Date "
        },
        {
            "type": "Input.Date",
            "placeholder": "Date",
            "id": "DateVal",
            "value": "2020-09-20"
        },
        {
            "type": "Input.Toggle",
            "title": "${Survey.questions[3].question}",
            "id": "AcceptsTerms",
            "value": "false"
        }
    ],
    "actions": [
        {
            "type": "Action.Submit",
            "title": "Submit",
            "data": {
                "id": "1234567890"
            }
        }
    ]
}